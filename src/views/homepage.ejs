<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
      background-color: #fff;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    th,
    td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #4caf50;
      color: white;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    caption {
      margin: 10px;
      font-size: 1.5em;
      font-weight: bold;
    }
  </style>
  <body>
    <!-- Navbar -->
    <div class="topnav">
      <a class="active" href="/home">HomePage</a>
      <a class="#news" href="/create">Create</a>
      <a class="#contact" href="/update">update</a>
    </div>
    <!-- Form Container -->
    <table>
      <caption>
        Danh sách người dùng
      </caption>
      <thead>
        <!-- <%= JSON.stringify(listUser) %> -->

        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>City</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% listUser.forEach(user => { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.address %></td>
          <td><%= user.city %></td>
          <td>
            <a href="/update/<%= user.id %>">Edit</a>
            <button>Delete</button>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
